@startuml
' TODO: Multiplicity between Person and Restaurant appears as * on both ends; assumed many-to-many.
' TODO: Staff seems to be a specialization of Person; inferred from inheritance arrow.
' TODO: Restaurant-to-Staff multiplicity not fully clear; assumed 1 restaurant employs many staff (1..*).
' TODO: Customer-to-Waiting Staff association shows * near Customer; assumed many-to-many overall.

left to right direction

class Person {
  name: string
  address: string
  phone: string
}

class Restaurant {
  name: string
  address: string
  phone: string
  website: string
}

class Customer {
  name: string
  reservation: string
  allergies: string
}

class Staff {
  name: str
  address: str
  phone: str
}

class "Waiting Staff"
class "Cleaning Staff"
class "Cooking Staff"
class Waiter
class Sommelier
class Cleaner
class "Sous-chef"

Customer --|> Person
Staff --|> Person
"Waiting Staff" --|> Staff
"Cleaning Staff" --|> Staff
"Cooking Staff" --|> Staff
Waiter --|> "Waiting Staff"
Sommelier --|> "Waiting Staff"
Cleaner --|> "Cleaning Staff"
"Sous-chef" --|> "Cooking Staff"

Person "*" -- "*" Restaurant
Restaurant "1" -- "*" Staff
Customer "*" -- "*" "Waiting Staff"
@enduml